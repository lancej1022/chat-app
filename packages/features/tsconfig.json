{
  "extends": ["@acme/tsconfig/internal-package.json"],
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",
    "jsxImportSource": "nativewind",
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "paths": {
      "~/*": ["src/*"]
    },
    "types": ["nativewind/types", "@types/react-native-web"],
    "outDir": "dist"
  },
  "include": ["src", "**/*.ts", "**/*.tsx", "nativewind-env.d.ts"],
  "exclude": ["node_modules", "build", "dist", ".next", ".expo"]
}
