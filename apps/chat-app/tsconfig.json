{
  "extends": ["@acme/tsconfig/base.json"],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",
    "jsxImportSource": "nativewind",
    "paths": {
      "react-native": ["node_modules/react-native-web"],
      "~/*": ["src/*"]
    },
    "outDir": "dist",
    "types": ["nativewind/types"]
  },
  "include": ["src", "**/*.ts", "**/*.tsx", "nativewind-env.d.ts"]
}
