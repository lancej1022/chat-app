{
  "name": "fastify-be",
  "version": "0.0.1",
  "description": "Fastify Backend for the chat app",
  "main": "app.js",
  "type": "module",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "start": "pnpm run build && fastify start -l info dist/app.js",
    "build": "tsc",
    "watch": "tsc -w",
    "dev": "pnpm run build && concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"pnpm:watch\" \"pnpm:dev:start\"",
    "dev:start": "pnpm run build && fastify start --ignore-watch=.ts$ -w -l info -P dist/app.js",
    "test": "pnpm run db:seed && c8 pnpm run test:run",
    "test:run": "glob -c \"tsx --test\" \"./test/**/*.ts\"",
    "standalone": "pnpm run build && node --env-file=.env dist/server.js",
    "lint": "eslint --ignore-pattern=dist",
    "lint:fix": "pnpm run lint -- --fix",
    "db:create": "tsx --env-file=.env ./scripts/create-database.ts",
    "db:drop": "tsx --env-file=.env ./scripts/drop-database.ts",
    "db:migrate": "tsx --env-file=.env ./scripts/migrate.ts",
    "db:seed": "tsx --env-file=.env ./scripts/seed-database.ts"
  },
  "dependencies": {
    "@fastify/autoload": "^6.3.0",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.0.1",
    "@fastify/env": "^5.0.2",
    "@fastify/helmet": "^13.0.1",
    "@fastify/multipart": "^9.0.3",
    "@fastify/rate-limit": "^10.2.2",
    "@fastify/sensible": "^6.0.3",
    "@fastify/session": "^11.1.0",
    "@fastify/static": "^8.1.1",
    "@fastify/swagger": "^9.4.2",
    "@fastify/swagger-ui": "^5.2.2",
    "@fastify/type-provider-typebox": "^5.1.0",
    "@fastify/under-pressure": "^9.0.3",
    "@sinclair/typebox": "^0.34.33",
    "concurrently": "^9.1.2",
    "csv-stringify": "^6.5.2",
    "fastify": "^5.2.2",
    "fastify-cli": "^7.4.0",
    "fastify-plugin": "^5.0.1",
    "knex": "^3.1.0",
    "mysql2": "^3.14.0",
    "postgrator": "^8.0.0",
    "sanitize-filename": "^1.6.3"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "c8": "^10.1.3",
    "eslint": "catalog:",
    "fastify-tsconfig": "^3.0.0",
    "form-data": "^4.0.2",
    "glob": "^11.0.1",
    "neostandard": "^0.12.1",
    "tsx": "^4.19.3",
    "typescript": "~5.8.3"
  }
}
